{
  "project": "CirrusTranslate",
  "repo": "git@github.com:Cirrus-Inc/CirrusTranslate.git",
  "created": "2025-11-29",
  "last_updated": "2025-11-29",
  "tech_stack": {
    "frontend": {
      "framework": "Next.js",
      "ui": "React",
      "language": "TypeScript",
      "styling": "Tailwind CSS"
    },
    "backend": {
      "framework": "NestJS",
      "language": "TypeScript",
      "database": "PostgreSQL",
      "orm": "Prisma"
    },
    "workers": {
      "ingestion": {
        "language": "Python",
        "purpose": "Video ingestion worker"
      }
    },
    "infrastructure": {
      "hosting": "DigitalOcean App Platform",
      "containerization": "Docker"
    },
    "testing": {
      "unit": "Jest",
      "e2e": "Cypress"
    }
  },
  "architecture": {
    "type": "monorepo",
    "apps": {
      "api": {
        "path": "/apps/api",
        "tech": "NestJS",
        "purpose": "Backend API",
        "port": 3001
      },
      "web": {
        "path": "/apps/web",
        "tech": "Next.js",
        "purpose": "Web portal",
        "port": 3000
      },
      "cirrus-editor": {
        "path": "/apps/cirrus-editor",
        "tech": "React",
        "purpose": "Video editor"
      }
    },
    "workers": {
      "ingestion": {
        "path": "/workers/ingestion",
        "tech": "Python",
        "purpose": "Video ingestion processing"
      }
    }
  },
  "conventions": {
    "naming": {
      "components": {
        "case": "PascalCase",
        "example": "TranslationCard.tsx",
        "location": "/apps/web/src/components"
      },
      "hooks": {
        "case": "camelCase",
        "prefix": "use",
        "example": "useTranslation.ts",
        "location": "/apps/web/src/hooks"
      },
      "utils": {
        "case": "camelCase",
        "example": "formatDate.ts",
        "location": "/apps/web/src/utils"
      },
      "api_routes": {
        "case": "kebab-case",
        "example": "/api/user-profile"
      }
    },
    "database": {
      "migrations": {
        "tool": "Prisma",
        "format": "YYYYMMDDHHMMSS_description",
        "required": true,
        "rollback": "Required for breaking changes"
      }
    },
    "testing": {
      "required_for_pr": true,
      "coverage_target": 80,
      "commands": {
        "all": "npm test",
        "specific_app": "npm test --workspace=@cirrus/api"
      }
    }
  },
  "environments": {
    "development": {
      "web": "https://dev.cirrustranslate.com",
      "api": "https://api-dev.cirrustranslate.com",
      "editor": "https://editor-dev.cirrustranslate.com",
      "storage": "https://storage-dev.cirrustranslate.com",
      "auto_deploy": true,
      "branch": "develop"
    },
    "staging": {
      "web": "https://staging.cirrustranslate.com",
      "api": "https://api-staging.cirrustranslate.com",
      "editor": "https://editor-staging.cirrustranslate.com",
      "storage": "https://storage-staging.cirrustranslate.com",
      "auto_deploy": true,
      "branch": "staging"
    },
    "production": {
      "web": "https://cirrustranslate.com",
      "api": "https://api.cirrustranslate.com",
      "editor": "https://editor.cirrustranslate.com",
      "storage": "https://storage.cirrustranslate.com",
      "auto_deploy": false,
      "branch": "main",
      "requires_approval": true
    }
  },
  "code_owners": {
    "default": ["@Pamperito74"],
    "backend": ["@Pamperito74"],
    "frontend": ["@Pamperito74", "@Rhettyoungberg"],
    "infrastructure": ["@Pamperito74"]
  },
  "special_requirements": {
    "cla": {
      "required": true,
      "type": "contributor",
      "location": "CLA.md"
    },
    "branch_protection": {
      "main": {
        "required_approvals": 1,
        "require_codeowner_review": true,
        "require_status_checks": true
      },
      "staging": {
        "required_approvals": 1,
        "require_status_checks": true
      }
    }
  },
  "related_projects": ["DevOps"],
  "sessions": {
    "total": 0,
    "recent": [],
    "topics": {
      "auth": 0,
      "translation": 0,
      "video": 0,
      "api": 0
    }
  }
}
